script/source = "extends VBoxContainer

onready var Name = $Name
onready var Price = $HBoxContainer/Price
onready var Stage = $HBoxContainer/Stage

func set_name(n):
	Name.text = \"Crop: \" + str(n)

func set_price(p):
	Price.text = \"$ \" + str(p)

func set_stage(s):
	Stage.text = \"Growth: \" + str(s)
"

